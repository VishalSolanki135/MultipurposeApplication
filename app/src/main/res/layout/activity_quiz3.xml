<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuizApp"
    android:background="@drawable/insta_gradient">

    <TextView
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:text="Q3. What is always coming but never arrives?"
        tools:ignore="MissingConstraints"
        android:textColor="#fff"
        android:textSize="30dp"
        android:paddingTop="30dp"
        android:id="@+id/q3"
        android:paddingLeft="10dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/q3"
        android:layout_marginTop="50dp"
        android:background="@drawable/login_background"
        android:hint="Enter your answer here!"
        android:textColor="#fff"
        android:textSize="30dp"
        android:id="@+id/answer"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:text="Submit"
        android:textColor="#fff"
        android:backgroundTint="#ffb6c1"
        android:background="@drawable/feed_gradient"
        android:id="@+id/result"/>
</RelativeLayout>