<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BluetoothActivity"
    android:background="@drawable/insta_gradient">

    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/toggleButtonBluetooth"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/feed_gradient"
        android:backgroundTint="#ffb6c1"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40dp"
        android:checked="false"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/resultOfBluetooth"
        android:layout_marginTop="20dp"
        android:background="@drawable/feed_gradient"
        android:backgroundTint="#ffb6c1"
        android:layout_marginBottom="40dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:textAlignment="center"
        android:textSize="40dp"
        android:textColor="#fff"
        android:layout_above="@+id/toggleButtonBluetooth"
        android:gravity="center_horizontal" />

    <ImageView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:id="@+id/bluetoothImage"
        android:layout_marginTop="100dp"
        android:layout_centerHorizontal="true" />

</RelativeLayout>